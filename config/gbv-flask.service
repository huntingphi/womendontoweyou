[Unit]
Description=GBV Site Flask Backend
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/opt/gbv-site/backend
EnvironmentFile=/opt/gbv-site/backend/.env
ExecStart=/usr/local/bin/gunicorn --config gunicorn.conf.py app:app
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
